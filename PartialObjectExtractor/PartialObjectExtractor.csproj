<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- NuGet Package Properties -->
        <PackageId>PartialObjectExtractor</PackageId>
        <Version>1.0.0</Version>
        <Authors>achepta</Authors>
        <Description>Extract partial objects using JSONPath expressions while preserving structure. Uses reflection-first approach for optimal performance with large objects.</Description>
        <PackageTags>jsonpath;json;partial;query;graphql;newtonsoft;extract;filter</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/achepta/csharp-partial-object-extractor/PartialObjectExtractor</PackageProjectUrl>
        <RepositoryUrl>https://github.com/achepta/csharp-partial-object-extractor</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="/" />
    </ItemGroup>
</Project>
